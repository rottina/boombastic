{
  "name": "boombastic",
  "version": "2.0.0",
  "description": "A chrome extension that displays music charts & other feeds, and lets you preview songs.",
  "main": "index.js",
  "directories": {
    "lib": "_lib"
  },
  "scripts": {
    "build": "esbuild \"src/**/*.*\" --loader:.json=copy --loader:.css=copy --outdir=lib --resolve-extensions=.ts,.json,.css",
    "format": "biome format --write .",
    "lint": "biome lint ."
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tsconfig/recommended": "^1.0.8",
    "esbuild": "0.25.4",
    "esbuild-plugin-copy": "^2.1.1"
  },
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "24.0.1",
    "npm": "11.3.0"
  }
}
